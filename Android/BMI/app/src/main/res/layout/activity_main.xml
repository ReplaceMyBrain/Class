<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="15dp"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/P0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/summer"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이제 곧 여름인데"
        android:textSize="35dp"
        />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="다이어트를 시작해볼까?"
       android:textSize="35dp"
        />


    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="핫바디를 위해 시작해보자!!"
        android:layout_gravity="center"
        android:backgroundTint="#00EAFF"
        android:textSize="22dp"
        android:textColor="#615C5C"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/P1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/ohno"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다이어트 전에 나의 BMI는?"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/btn_cm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 BMI가 궁금해!"
            android:layout_gravity="center"
            android:backgroundTint="#00EAFF"
            android:textSize="20dp"

            android:textColor="#615C5C"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/P2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/cm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키가 몇이야?(cm)"
            android:textSize="40dp"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/etCm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EX)170"
            android:textSize="40dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음!"
            android:layout_gravity="center"
            android:backgroundTint="#00EAFF"
            android:textSize="25dp"
            android:textColor="#615C5C"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/P3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/kg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸무게는?(Kg)"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/etKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="EX)60"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btn_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결과보기!"
                android:layout_gravity="center"
                android:backgroundTint="#00EAFF"
                android:textSize="25dp"
                android:textColor="#615C5C"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/P4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/bmi"
               />

            <TextView
                android:id="@+id/tvBmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="-40dp"
                />

            <TextView
                android:id="@+id/tvBmiResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주변 헬스장 찾아보기"
                android:layout_gravity="center"
                android:backgroundTint="#00EAFF"
                android:textSize="25dp"
                android:textColor="#615C5C"
                android:layout_marginTop="40dp"
                android:layout_margin="10dp"

                />
        </LinearLayout>
</FrameLayout>